#
# ~/.gitconfig
#

[user]
  name = "Amber Cronin"
  email = "amber@amber.vision"
  signingkey = 14E7B51AF7B30CA7

[alias]
  st = "status --short --branch"
  br = "branch --all --verbose"
  amend = "commit --amend --no-edit"

[commit]
  gpgsign = true

[core]
  editor = "nano --rcfile $NANO_RC_FILE"
  excludesfile = "$HOME/.gitignore"

[gpg]
  program = gpg

[help]
  autocorrect = 1

[init]
  defaultbranch = main

[push]
  autosetupremote = true

[tag]
  gpgsign = true
